{
  "compilerOptions": {
    "lib": [ "esnext" ],
    "outDir": "./shim",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "incremental": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "shim"
  ],
  "include": [
    "lib",
    "test",
    "example"
  ],
  "types": [
    "mocha"
  ]
}
